	<include file="$(find pr2_machine)/$(env ROBOT).machine" />

	<!-- Launch the joystick teleop for navigation and mux -->
	<include file="$(find pr2_navigation_teleop)/teleop.xml" />

	<!-- agent pose prediction, for the local-planning -->
