<launch>
  <arg name="ns" default=""/>
  <arg name="node_start_delay" default="4.0" />
  <arg name="robot_planner" default="cohan"/>
  <arg name="bt_xml" default="test.xml"/>
          <!-- cohan or smb -->

  <!-- ****************************************************************************** -->
  <!-- *         Two different settings to avoid '/' in tf2 frames                  * -->
  <!-- ****************************************************************************** -->
  <group if="$(eval 'cohan'==arg('robot_planner'))">
    <group if="$(eval ''==arg('ns'))">
      <!-- move_base node with hateb -->
      <node pkg="move_base" type="move_base" name="move_base" output="screen" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' ">
      	<remap from="scan" to="base_scan"/>
        <remap from="cmd_vel" to="base_controller/command"/>
        <param name="base_global_planner" value="global_planner/GlobalPlanner" />
        <param name="base_local_planner" value="hateb_local_planner/HATebLocalPlannerROS" />
        <param name="GlobalPlanner/allow_unknown" value="true" />
        <param name="bt_xml_path"  value="$(find hateb_local_planner)/behavior_trees/$(arg bt_xml)"/>

        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/move_base_params.yaml" command="load" />
        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/global_costmap_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/local_costmap_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/hateb_local_planner_params.yaml" command="load" ns="HATebLocalPlannerROS" />
      </node>
    </group>

    <group unless="$(eval ''==arg('ns'))">
      <!-- move_base node with hateb with namespace-->
      <node pkg="move_base" type="move_base" name="move_base" output="screen" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' ">
        <remap from="map" to="/map"/>
        <remap from="scan" to="base_scan"/>
        <remap from="cmd_vel" to="base_controller/command"/>

        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/move_base_params.yaml" command="load" />
        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/global_costmap_params_human.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/local_costmap_params_human.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/local_planner_params_$(arg ns).yaml" command="load" ns="TrajectoryPlannerROS" />

        <param name="global_costmap/robot_base_frame" value="$(arg ns)/base_link"/>
        <param name="local_costmap/robot_base_frame" value="$(arg ns)/base_link"/>
        <param name="local_costmap/global_frame" value="$(arg ns)/odom"/>
        <param name="bt_xml_path"  vlaue="$(find hateb_local_planner)/behavior_trees/$(arg bt_xml)"/>

      </node>
    </group>
  </group>

  <group if="$(eval 'smb'==arg('robot_planner'))">

  <node pkg="move_base" type="move_base" name="move_base" output="screen" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' ">
		<param name="base_global_planner" value="global_planner/GlobalPlanner"/>
		<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/>
    <param name="GlobalPlanner/allow_unknown" value="true" />

		<rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/smb/planner.yaml" command="load"/>
		<rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/smb/costmap_common.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/smb/costmap_common.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/smb/costmap_global.yaml" command="load"/>
		<rosparam file="$(find cohan_navigation)/config/gazebo_pr2_move_base_config/smb/costmap_local.yaml" command="load"/>

	</node>
  </group>

</launch>
