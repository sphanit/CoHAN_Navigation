      <arg name="gui" value="$(arg gui)"/>
    </include>
  </group>

  <group if="$(eval 'maze'==arg('map_name'))">
    <include file="$(find cohan_nav_gazebo_ros)/launch/gazebo_pr2_maze.launch">
      <arg name="gui" value="$(arg gui)"/>
    </include>
  </group>

  <group if="$(eval 'open_space'==arg('map_name'))">
    <include file="$(find cohan_nav_gazebo_ros)/launch/gazebo_pr2_open_space.launch">
      <arg name="gui" value="$(arg gui)"/>
    </include>
  </group>

  <group if="$(eval 'mall'==arg('map_name'))">
